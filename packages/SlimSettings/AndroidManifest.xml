<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:sharedUserId="android.uid.system"
          package="com.slim.settings"
          android:versionCode="1"
          android:versionName="1" >

    <uses-permission android:name="slim.permission.WRITE_SETTINGS" />
    <uses-permission android:name="slim.permission.WRITE_SECURE_SETTINGS" />

    <application
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="SlimSettings" >

        <activity
            android:name="com.slim.settings.activities.InterfaceSettingsActivity"
            android:label="@string/interface_settings_title"
            android:icon="@drawable/ic_settings_interface"
            android:theme="@android:style/Theme.Material.Settings" >

            <intent-filter>
                <action android:name="com.android.settings.action.EXTRA_SETTINGS" />
            </intent-filter>

            <meta-data
                android:name="com.android.settings.category"
                android:value="com.android.settings.category.personalization" />

        </activity>

        <activity
            android:name="com.slim.settings.activities.NavigationSettingsActivity"
            android:label="@string/navigation_settings_title"
            android:icon="@drawable/ic_settings_navigation"
            android:theme="@android:style/Theme.Material.Settings" >

            <intent-filter>
                <action android:name="com.android.settings.action.EXTRA_SETTINGS" />
            </intent-filter>

            <meta-data
                android:name="com.android.settings.category"
                android:value="com.android.settings.category.personalization" />

        </activity>

        <activity
            android:name="com.slim.settings.activities.DozeSettingsAcitivity"
            android:label="@string/doze_settings_title"
            android:theme="@android:style/Theme.Material.Settings" >

            <intent-filter>
                <action android:name="com.slim.settings.action.DOZE_SETTINGS" />
            </intent-filter>

        </activity>

        <activity android:name=".SubSettings"
                android:theme="@android:style/Theme.Material.Settings"
                android:taskAffinity="com.slim.settings">
        </activity>

        <!-- Slim Shortcuts -->
        <activity
            android:name="CreateSlimShortcut"
            android:label="@string/slim_shortcut_picker"
            android:theme="@android:style/Theme.Material.Dialog.NoActionBar"
            android:excludeFromRecents="true"
            android:configChanges="orientation|keyboardHidden|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".slim.SlimActionShortcut"
            android:theme="@android:style/Theme.NoDisplay"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- Slim shortcut picker -->
        <activity
            android:name="com.slim.settings.chamber.CreateShortcut"
            android:label="@string/shortcut_picker"
            android:icon="@*org.slim.framework:drawable/ic_shortcut_action_theme_switch"
            android:configChanges="orientation|keyboardHidden|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- extremely secret launcher shortcut -->
        <activity
            android:name="com.slim.settings.chamber.ChamberOfSecrets"
            android:label="@string/chamber_title"
            android:icon="@*org.slim.framework:drawable/ic_shortcut_action_theme_switch"
            android:theme="@android:style/Theme.NoDisplay"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.android.systemui.SHORTCUT_COS" />
            </intent-filter>
        </activity>

    </application>
</manifest>
